@model Student

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h2 class="text-center">Add New Student</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Create">
                <div class="mb-3">
                    <label class="form-label">ID</label>
                    <input asp-for="ID" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Surname</label>
                    <input asp-for="Surname" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Birth Date</label>
                    <input asp-for="BirthDate" type="date" class="form-control" required />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success w-50">Create</button>
                    <a asp-action="Index" class="btn btn-secondary w-50">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
